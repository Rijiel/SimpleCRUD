@model IEnumerable<PersonResponse>
@{
	ViewData["Title"] = "Home Page";
}

<div class="row">
	<h3 class="text-center my-3">Persons List</h3>
	@foreach (var person in Model)
	{
		<div class="col-4 my-2">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Name: @(person.FirstName + " " + person.LastName)</h5>
					<h6 class="card-subtitle mb-2 text-muted">Age: @person.Age</h6>
					<p class="card-text">Email: @person.Email</p>
					<div class="d-flex justify-content-center gap-3">
						<a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger">Delete</a>
						<a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-primary">Edit</a>
					</div>
				</div>
			</div>
		</div>
	}

	<div class="mt-5">
		<div class="w-50 mx-auto">
			<a asp-action="Create" class="btn btn-primary form-control">Create</a>
		</div>
	</div>
</div>
